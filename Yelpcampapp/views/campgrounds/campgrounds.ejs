<%- include('../partials/header') %>
<style>
    body{
        background-image: url("https://images.unsplash.com/photo-1584551882802-ca081b505b49?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1025&q=80");
        background-size: cover;
    }
  img{
      width: 100%;   
      height: 10rem;
  }
  .container
  {
      margin-top: 1rem;
  }
  #caption{
      margin-top: 0.5rem;
  }
  #morebtn:hover{
      background-color:#3300cc !important;
  }
  #con{
    background-color: rgba(255,255,255,0.8);
  }
  #zoom {
  transition: transform .2s; /* Animation */
 
}
.jumbotron{
    padding: 1rem !important;
    background-color: rgba(255,255,255,0.6);
}
#zoom:hover {
  transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
}
</style>
<body>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
                </p>
            </div>
        </header>
        <div  class="row text-center" style="display: flex;flex-wrap: wrap;"> 
                <%campgrounds.forEach(function(campground,i){%>
                    
                    <div id="zoom" class="col-md-3 col-sm-6">
                         <div id="con" class="thumbnail">
                            <img src="<%=campground.image%>" alt="">
                            <div id="caption" class="caption">
                                <h4><%=campground.name%></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary" id="morebtn"style="background-color:#00008b;">More Info</a>
                            </p>
                        </div> 
                    </div> 
                <%})%>
        </div>    
    </div> 
</body>

<%- include('../partials/footer') %>
