<%- include('../partials/header') %>

<style>
    #error{
        color: red;
        padding-left: 0.5rem;
        display: none;
    }
    .jumbotron
    {

        padding: 1rem !important;
        width: 40%;
        margin: 2rem auto;
    }
</style>
<div class="jumbotron">
    
    <div class="column">
        <div></div>
        <h2 style="margin: 1rem auto;text-align: center;">Edit <%=campground.name%></h2>
        <hr>
        <div style="width: 100%; margin: 3rem auto; position: relative; margin-bottom: 1rem;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">   <input class="form-control" type="text" placeholder="name" name="campground[name]" value="<%=campground.name%>"></div>
                <div class="form-group">   <input class="form-control" type="number" placeholder="price" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01"></div>
                <div class="form-group"><input class="form-control" type="text" placeholder="image url" name="campground[image]" id="url" value="<%=campground.image%>">
                  
                </div>
                <div class="form-group"><textarea name="campground[description]" class="form-control"  rows="5" placeholder="Description......" ><%=campground.description%></textarea>
                   
                </div>
                <div class="form-group"><input class="form-control" type="text" placeholder="Location" name="campground[location]" id="url" value="<%=campground.location%>">
                
                </div>
                <div class="form-group">
                    <button id="btn"class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
               
            </form>
            <a style="position: relative; bottom: 0px;" href="/campgrounds">Go Back</a>
        </div>
        
       
    </div>
    
</div>

<%- include('../partials/footer') %>