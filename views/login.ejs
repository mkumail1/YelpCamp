<%- include('./partials/header') -%>

<div class="container">
    <form class="form-horizontal" action="/login" method="POST">
        <div class="form-group">
          <label class="control-label col-sm-2 col-lg-4" for="text">Username:</label>
          <div class="col-sm-10 col-lg-4">
            <input type="text" name="username" class="form-control" id="text" placeholder="Enter email" required>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2 col-lg-4" for="pwd">Password:</label>
          <div class="col-sm-10 col-lg-4">
            <input type="password" name="password" class="form-control" id="pwd" placeholder="Enter password" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 col-lg-4">
            <div class="checkbox">
              <label><input type="checkbox"> Remember me</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 col-lg-4">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>
</div>


<%- include('./partials/footer') -%>
